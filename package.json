{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "build": "run-s \"build:*\"",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "postcss styles --base styles --dir app/styles --watch",
    "dev:remix": "remix dev",
    "start": "remix-serve build",
    "typecheck": "tsc -b",
    "lint": "pnpm run lint:style && pnpm run lint:eslint && pnpm run typecheck",
    "lint:eslint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx .",
    "lint:style": "prettier . --check",
    "lint:fix": "npx prettier . --write && npm run lint:eslint --fix",
    "commit": "cz"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.16",
    "@chakra-ui/react": "^2.5.1",
    "@chakra-ui/system": "^2.5.7",
    "@emotion/cache": "^11",
    "@emotion/react": "^11",
    "@emotion/server": "^11",
    "@emotion/styled": "^11",
    "@remix-run/node": "^1.8.2",
    "@remix-run/react": "^1.8.2",
    "@remix-run/serve": "^1.15.0",
    "framer-motion": "^10",
    "gray-matter": "^4.0.3",
    "isbot": "^3.6.6",
    "marked": "^4.2.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.0",
    "@remix-run/eslint-config": "^1.16.1",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.1",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.8.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "@chakra-ui/system",
        "@vue/compiler-sfc"
      ]
    }
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@3.4.1"
}
